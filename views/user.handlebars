          <section id="searchBar">
                  <div class="row" class="searchbar">
                    <div class="col-sm-12 col-sm-offset-4" style="margin-bottom:0px">
                                         
                      <div class="input-group input-group-lg">
                          <form action="/api/movieSearch?_method=PUT" method="POST">
                             <div class="input-group">
                         
                                <input type="text" class="form-control" id="search-input" aria-label="keyWords" placeholder="Search..." name="movie">
                                  <div class="input-group-btn">
                                     <button type="submit" class="btn btn-default" id="search-submit"><i class="glyphicon glyphicon-search" onclick="hideFunction()"></i></button>
                                  </div>
                             </div>
                          </form> 
                      </div>
                    </div>
                {{!-- <!-- / row --> --}}
                  </div>
                  <div class="row" >                   
                      <div class="col col-left-center col-full-xs searchtext">
                          <h2>Search Results:<span id=>{{movieSearch}}</span></h2 >
                      </div>
                  </div>
              </section>
        {{!-- <!-- /.section--> --}}
    
        <div class="row" style="background-color:#dee1e5;" >
           <div class="col col-left-center col-full-xs" id="searchResult">

                 
             <ul>
                {{#each data}}
                  <div class="col-md-6" id="imagecard">
                    
                    <div class="media">
                        <div class="media-left media-middle">
                         
                            <img src=http://image.tmdb.org/t/p/w185{{this.poster_path}} alt="Lights">
                         
                        </div>
                      <div class="media-body">

                          <h4 class="media-heading" style="font-style: 'Source Sans Pro', sans-serif">{{this.title}} ({{this.release_date}}) </h4>

                          <h5 class="rating">{{this.popularity}} <span class="glyphicon glyphicon-star"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{this.vote_average}}  <span class="glyphicon glyphicon-thumbs-up"></span></h5>
                                                    
                          <h5 class="overview"> {{this.overview}}</h5>
                           <form action='/api/watchlist' method='POST'>
                             <input type='hidden' name='movieID' value={{this.id}}>
                             <button type='submit' class="btn btn-primary" id="watchlater" >Watch later!</button>
                    
                           </form>
                        </div>
                      </div>

                  </div>
                {{/each}}
            </ul>
          </div>
        </div>


